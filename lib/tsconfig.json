{
  "compilerOptions": {
    "incremental": true,
    "declaration": true,
    "outDir": "./dist",
    "target": "ES5",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "src/*": [
        "src/*"
      ],
      "components/*": [
        "src/components/*"
      ],
      "shared/*": [
        "src/shared/*"
      ],
      "types/*": [
        "src/types/*"
      ],
      "hooks/*": [
        "src/hooks/*"
      ],
      "requests/*": [
        "src/requests/*"
      ]
    },
    "jsx": "react",
    "resolveJsonModule": true
  },
  "include": [
    "src"
  ]
}